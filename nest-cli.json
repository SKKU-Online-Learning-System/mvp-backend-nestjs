{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": ["**/mail/templates/*"],
		"watchAssets": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"dtoFileNameSuffix": [
						".dto.ts",
						".entity.ts",
						".swagger.ts"
					]
				}
			}
		]
	}
}
